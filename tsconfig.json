{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": ["es2017", "es7", "es6", "dom"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "resolveJsonModule": true,
        "jsx": "react",
    },
    "include": ["./lib"],
    "exclude": ["node_modules", "dist"]
    // ...,
}
